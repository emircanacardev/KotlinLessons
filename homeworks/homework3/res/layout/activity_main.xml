<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Başlık -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Uygulaması"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Ürün 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/productCard1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Ürün Resmi -->
            <ImageView
                android:id="@+id/productImage1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_product_image"
                android:contentDescription="Ürün Resmi"
                android:layout_marginEnd="16dp"/>

            <!-- Ürün Bilgileri -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/productName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ürün Adı"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/productPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺ 10.00"
                    android:textSize="16sp"
                    android:textColor="#ff0000"
                    android:layout_marginTop="8dp"/>

                <!-- Sepete Ekle Butonu -->
                <Button
                    android:id="@+id/addToCartButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sepete Ekle"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Ürün 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/productCard2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/productCard1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Ürün Resmi -->
            <ImageView
                android:id="@+id/productImage2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_product_image"
                android:contentDescription="Ürün Resmi"
                android:layout_marginEnd="16dp"/>

            <!-- Ürün Bilgileri -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/productName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ürün Adı 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/productPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺ 20.00"
                    android:textSize="16sp"
                    android:textColor="#ff0000"
                    android:layout_marginTop="8dp"/>

                <!-- Sepete Ekle Butonu -->
                <Button
                    android:id="@+id/addToCartButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sepete Ekle"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
